{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <br/><br/>
    <button type="button" class="btn btn-success"><a href="{{ path('commande_new') }}" class="text-white" style="text-decoration:none;" >Nouveau Commande</a></button>
    <br/><br/>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateComm</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.dateComm ? commande.dateComm|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <button type="button" class="btn btn-info"><a href="{{ path('commande_show', {'id': commande.id}) }}" class="text-white" style="text-decoration:none;" >Plus</a></button>
                    <button type="button" class="btn btn-danger"><a href="{{ path('commande_edit', {'id': commande.id}) }}" class="text-white" style="text-decoration:none;" >Modifier</a></button>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
