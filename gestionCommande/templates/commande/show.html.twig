{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>DateComm</th>
                <td>{{ commande.dateComm ? commande.dateComm|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    
    <button type="button" class="btn btn-info"><a href="{{ path('commande_index') }}" class="text-white" style="text-decoration:none;" >Retour</a></button>
    
    <button type="button" class="btn btn-warning"><a href="{{ path('commande_edit', {'id': commande.id}) }}" class="text-white" style="text-decoration:none;" >Modifier</a></button>

    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
