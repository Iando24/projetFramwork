{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-info"><a href="{{ path('client_index') }}" class="text-white" style="text-decoration:none;" >Retour</a></button>

    <button type="button" class="btn btn-warning"><a href="{{ path('client_edit', {'id': client.id}) }}" class="text-white" style="text-decoration:none;" >Modifier</a></button>

    <p>{{ include('client/_delete_form.html.twig') }}</p>
{% endblock %}
