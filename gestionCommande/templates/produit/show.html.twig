{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <br><br>
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ produit.libelle }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ produit.qte }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
        </tbody>
    </table>
    <button type="button" class="btn btn-info"><a href="{{ path('produit_index') }}" class="text-white" style="text-decoration:none;" >Retour</a></button>
    
    <button type="button" class="btn btn-warning"><a href="{{ path('produit_edit', {'id': produit.id}) }}" class="text-white" style="text-decoration:none;" >Modifier</a></button>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
